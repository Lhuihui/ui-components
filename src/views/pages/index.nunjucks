    <h3 class="content--heading base--h3">SASS Utilities</h3>
    <hr class="base--hr">

    <h4 class="base--h4">Grid Mixin</h4>
    <div class="code-block">
      <div class="code-block--code">
        <pre class="base--pre">
.left-column {
  @include grid(6);
  background-color: color('purple', 30);
  height: 3rem;
}

.right-column {
  @include grid(6, $has-right-gutter: false);
  background-color: color('teal', 30);
  height: 3rem;
}
        </pre>
      </div>
      <div class="code-block--ui">
        <div class="left-column"></div>
        <div class="right-column"></div>
      </div>
    </div>

    <h4 class="base--h4">Divisions Mixin</h4>
    <div class="code-block">
      <div class="code-block--code">
        <pre class="base--pre">
.left-column {
  @include grid(6);
  background-color: color('purple', 30);
  height: 3rem;
}

.right-column {
  @include grid(6, $has-right-gutter: false);
  background-color: color('teal', 30);
  height: 3rem;
}
        </pre>
      </div>
      <div class="code-block--ui">
        <div class="left-column"></div>
        <div class="right-column"></div>
      </div>
    </div>
