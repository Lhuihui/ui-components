    <hr class="base--hr">
    {% include "core/colors.nunjucks" %}

    <h3 class="content--heading base--h3">Typography</h3>
    <hr class="base--hr">
    {% call codeblock() %}
{% include "base/h1.nunjucks" %}
{% include "base/h2.nunjucks" %}
{% include "base/h3.nunjucks" %}
{% include "base/h4.nunjucks" %}
